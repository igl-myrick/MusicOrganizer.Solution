@{
  Layout = "_Layout";
}

@using MusicOrganizer.Models;

<h1>Albums</h1>

@if (Model.Count == 0)
{
  <h3>No albums have been added yet.</h3>
}

<ul>
  @foreach (Album album in Model)
  {
    <li>@Html.ActionLink($"{album.Title}", "Details", new { id = album.AlbumId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new album", "Create")</p>
<p>@Html.ActionLink("Add new song", "Create", "Songs")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>