@{
  Layout = "_Layout";
}

@model MusicOrganizer.Models.Album

<h2>Edit</h2>

<h4>Edit this album: @Html.DisplayFor(model => model.Title)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.AlbumId)

  @Html.LabelFor(model => model.Title)
  @Html.EditorFor(model => model.Title)
  <p>@Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
  
  <input type="submit" value="Save">
}

<p>@Html.ActionLink("Back to albums", "Index")</p>