@{
  Layout = "_Layout";
}

@model MusicOrganizer.Models.Artist

<h4>Add an artist</h4>


@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

  <input type="submit" value="Add new artist">
}

<p>@Html.ActionLink("Back to artists", "Index")</p>