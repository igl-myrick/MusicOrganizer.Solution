@{
  Layout = "_Layout";
}

@using MusicOrganizer.Models;

<h1>Search by Artist</h1>

<form action="/artists/search" method="post">
  <label for="searchStr">Enter a name or term to search for:</label>
  <input name="searchStr" id="searchStr" type="text">
  <button type="submit">Search</button>
</form>

<ul>
  @if (Model.Count > 0)
  {
    @foreach (Artist artist in Model)
    {
      <li><a href="/artists/@artist.Id">@artist.Name</a></li>
    }
  }
  else
  {
    <li>No results found</li>
  }
</ul>