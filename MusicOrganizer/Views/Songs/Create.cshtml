@{
  Layout = "_Layout";
}

@model MusicOrganizer.Models.Song

<p>Add a new song</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Title)
  @Html.TextBoxFor(model => model.Title)
  <p>@Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

  @Html.LabelFor(model => model.Album)
  @Html.DropDownList("AlbumId")
  <p>@Html.ValidationMessageFor(model => model.AlbumId, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

  <input type="submit" value="Add new song" class="btn btn-default">
}
<p>@Html.ActionLink("Show all songs", "Index")</p>